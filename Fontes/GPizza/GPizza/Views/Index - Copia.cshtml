<h2>Manutenção/Ordem de Serviço</h2>

<input type="hidden" id="hId" value="0" />

<ul class="formularioContainer">

    <li>
        <label class="label">
            Patrimônio
        </label>
        <input type="search"
               value=""
               id="txtPatrimonio"
               onkeyup="index.pesquisarPatrimonio()"
               onsearch="index.pesquisarPatrimonio()" />
        <input type="hidden" id="hfPatrimonioId" />
        <ul id="ulAutoCompletePatrimonio">
            <!--AJAX-->
        </ul>
    </li>
    <li>
        <label class="label">
            Motivo
        </label>
        <input type="text" value="" id="txtMotivo" />
        <img src="~/images/add.png" id="btnAdd" class="btnAdd disabled" onclick="index.adicionar()" />

    </li>

    <li>
        <label class="label">
            Itens adicionados
        </label>
        <table>
            <tr>
                <th>Patrimônio</th>
                <th>Motivo</th>
                <th></th>
            </tr>
            <tbody id="tbodyItems"></tbody>
        </table>
    </li>
    <li>
        <div id="divMsg"></div>
        <input type="button" value="Gravar" onclick="index.gravar()">
        <input type="button" value="Novo" onclick="">
    </li>
</ul>

