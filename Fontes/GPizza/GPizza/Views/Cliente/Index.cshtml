
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section estilos{
    <link href="~/lib/Framework/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/Framework/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/lib/Framework/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
    <link href="~/lib/Framework/css/sb-admin.css" rel="stylesheet">
    <link href="~/lib/fancybox/fancybox3/jquery.fancybox.min.css" rel="stylesheet" />
    <link href="~/css/Modal_Pesquisa/modal.css" rel="stylesheet" />
}

@section scripts{

    <script src="~/lib/FodaoJS.js"></script>
    <script src="~/lib/Funcoes.js"></script>
    <script src="~/js/Cliente/index.js"></script>
    <script src="~/lib/Framework/vendor/jquery/jquery.min.js"></script>
    <script src="~/lib/Framework/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/Framework/vendor/jquery-easing/jquery.easing.min.js"></script>

    <script src="~/lib/Framework/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/lib/Framework/vendor/datatables/dataTables.bootstrap4.js"></script>
    <script src="~/lib/Framework/js/sb-admin.min.js"></script>
    <script src="~/lib/Framework/js/demo/datatables-demo.js"></script>


    <script src="~/lib/fancybox/jquery/jquery-3.4.0.min.js"></script>
    <script src="~/lib/fancybox/fancybox3/jquery.fancybox.min.js"></script>
}

<div id="content-wrapper">
    <div class="container-fluid">
        <div class="card mb-3">
            <div class="container" style="background-color:#E4E4E4">
                <div class="form-group col-md-6">
                    <h1>Cadastro de Cliente</h1>
                </div>
                <div class="form-row col-md-8">
                    <div class="form-group col-md-2">
                        <label for="id">Código:</label>
                        <input name="cli_codigo" type="number" class="form-control" id="cli_codigo" value="0" disabled>
                    </div>
                    <div class="form-group col-md-2 ">
                        <div style="position: relative; top:32px; width: 90px; ">
                            <input class="btn btn-primary" type="button" value="Pesquisar" onclick="index.abrirPesquisa()" />
                        </div>
                    </div>
                </div>
                <div class="form-group col-md ">

                </div>
                <div class="form-row col-md">
                    <div class="form-group col-md-8">
                        <label for="nome">Nome*:</label>
                        <input required name="cli_nome" type="text" maxlength="40" class="form-control" id="cli_nome" placeholder="Nome do Cliente..." value="" autofocus>
                    </div>
                </div>

                <div class="form-row col-md">
                    <div class="form-group col-md-3">
                        <label for="cpf">CPF*:</label>
                        <input required name="cli_cpf" type="text" maxlength="14" class="form-control" id="cli_cpf" placeholder="999.999.999-99" value="" onBlur="ValidarCPF('cli_cpf')" onKeyPress="MascaraCPF('cli_cpf')">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="rg">RG:</label>
                        <input name="cli_rg" type="text" maxlength="14" class="form-control" id="cli_rg" value="" onBlur="ValidarRG('cli_rg')" onKeyPress="MascaraRG('cli_rg')">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="data_nascimento">Data de Nasc.*:</label>
                        <input required name="cli_dt_nascimento" type="date" maxlength="10" class="form-control" id="cli_dt_nascimento" value="99/99/9999" onBlur="ValidarData('cli_dt_nascimento')">
                    </div>
                </div>


                <div class="form-row col-md">
                    <div class="form-group col-md-6">
                        <label for="endereco">Endereço:</label>
                        <input name="cli_endereco" type="text" class="form-control" id="cli_endereco" maxlength="40" placeholder="Endereço do Cliente..." value="">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="numero">Número:</label>
                        <input name="cli_numero" type="number" class="form-control" id="cli_numero" placeholder="0000" value="0">
                    </div>
                </div>

                <div class="form-row col-md">
                    <div class="form-group col-md-2">
                        <label for="bairro">Bairro:</label>
                        <input name="cli_bairro" type="text" class="form-control" id="cli_bairro" maxlength="20" placeholder="Bairro..." value="">
                    </div>

                    <div class="form-group col-md-2">
                        <label for="cep">CEP:</label>
                        <input name="cli_cep" type="text" class="form-control" id="cli_cep" maxlength="10" placeholder="99.999-999" value="" onBlur="ValidarCep('cli_cep')" onKeyPress="MascaraCep('cli_cep')">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="inputCidade">Cidade*:</label>
                        <select required name="cid_codigo" id="cid_codigo" class="form-control"></select>
                    </div>
                </div>


                <div class="form-row col-md">
                    <div class="form-group col-md-3">
                        <label for="telefone">Telefone:</label>
                        <input name="cli_telefone" type="text" class="form-control" id="cli_telefone" maxlength="15" placeholder="(99)9999-9999" value="" onBlur="ValidarTelefone('cli_telefone')" onKeyPress="MascaraTelefone('cli_telefone')">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="celular">Celular:</label>
                        <input name="cli_celular" type="text" class="form-control" id="cli_celular" maxlength="15" placeholder="(99)99999-9999" value="" onKeyPress="MascaraCelular('cli_celular')">
                    </div>
                </div>

                <div class="form-row col-md">
                    <div class="form-group col-md-8">
                        <label for="email">E-mail:</label>
                        <input required name="cli_email" type="email" class="form-control" id="cli_email" maxlength="50" placeholder="cliente@exemplo.com.br" value="" onExit="ValidarEmail('cli_email')">
                    </div>
                </div>


                <div class="form-group shadow-textarea col-md-8">
                    <label for="obs">Observações*:</label>
                    <textarea required name="cli_observacao" class="form-control z-depth-1" id="cli_observacao" maxlength="100"
                              rows="3" placeholder="Observações do Cliente..."></textarea>
                </div>


                <div class="form-group col-md-4">
                    <label for="divMsg" name="divMsg" id="divMsg"></label>
                </div>
                <div class="form-group col-md-6">
                    <input class="btn btn-primary" type="button" value="Gravar" onclick="index.gravar()" />
                    <input class="btn btn-primary" type="button" value="Excluir" onclick="index.excluir()" />
                    <input class="btn btn-primary" type="button" value="Limpar" onclick="index.limpar()" />
                </div>


            </div>
        </div>
    </div>

    <script>
        index.carregaCidades("");
    </script>
