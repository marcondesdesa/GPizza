<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Login - GPizza</title>

    <script type="text/javascript" src="~/lib/FodaoJS.js"></script>
    <script type="text/javascript" src="~/js/Login/Index.js"></script>

    <link rel="icon" href="~/images/favicon.ico" type="image/x-icon">
    <link href="~/css/login/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/login/floating-labels.css" rel="stylesheet" />
    <link href="~/css/login/Style.css" rel="stylesheet" />
    <link href="~/css/css.css" rel="stylesheet" />

</head>

<body>
    <fieldset class="campo">
        <form class="form-signin" method="post" action="#">
            <div class="text-center mb-4">
                <img class="mb-4" src="~/images/logo_256.png" alt="" width="72" height="72">
                <h1 class="h3 mb-3 font-weight-normal">GPizza</h1>
            </div>

            <div class="form-group">
                <label for="inputEmail">Usuário</label>
                <input type="text" id="txtUsuario" class="form-control" placeholder="Usuario" value="" required autofocus>
            </div>

            <div class="form-group">
                <label for="inputPassword">Senha:</label>
                <input type="password" id="txtSenha"  class="form-control" placeholder="Senha" value="" required>            
            </div>

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Lembre-me
                </label>
            </div>
            <input type="button" class="btn btn-lg btn-dark btn-block"  value="Entrar" onclick="index.logar()" />
            <p class="mt-5 mb-3 text-muted text-center">&copy; 2019-2020</p>
        </form>
    </fieldset>
    <script type="text/javascript" src="~/lib/FodaoJS.js"></script>
    <script type="text/javascript" src="~/js/Login/Index.js"></script>
</body>
</html>